<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/empty_img_follower"
        android:layout_width="match_parent"
        android:layout_height="@dimen/empty_img_height"
        android:layout_marginTop="@dimen/empty_img_margin_top"
        android:gravity="center"
        android:src="@mipmap/ic_folder_x" />

    <TextView
        android:id="@+id/empty_msg_follower"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/empty_img_follower"
        android:layout_marginTop="@dimen/empty_msg_margin_top"
        android:gravity="center"
        android:text="인사리스트가 존재하지 않습니다"
        android:textColor="@color/black_color"
        android:textSize="@dimen/empty_msg_size" />

</RelativeLayout>